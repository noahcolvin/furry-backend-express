{
  "compilerOptions": {
    "target": "ES2020",  // Or a later ECMAScript version if you need it
    "module": "commonjs",
    "outDir": "./dist",  // Output directory for compiled JavaScript
    "rootDir": "./",       // Root directory of your TypeScript files
    "strict": true,       // Enable strict type checking
    "esModuleInterop": true, // Important for compatibility with CommonJS modules
    "skipLibCheck": true, // Speeds up compilation by skipping type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // Allow importing JSON files
    "sourceMap": true    // Generate source maps for debugging
  },
  "include": ["**/*.ts"], // Files to include in compilation
  "exclude": ["node_modules"] // Files to exclude from compilation
}